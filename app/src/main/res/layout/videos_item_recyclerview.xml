<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    app:cardBackgroundColor="@color/fundoCard"
    app:cardCornerRadius="@dimen/raioArredCapaFilme"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recycler_videos_etiqueta_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/youtube"
            android:paddingLeft="10dp"
            android:text="Youtube"
            android:textColor="@color/corTexto"
            android:textSize="@dimen/tamEtiquetas"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/recycler_videos_etiqueta_pais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/youtube"
            android:paddingLeft="10dp"
            android:text="US"
            android:textColor="@color/corTexto"
            android:textSize="@dimen/tamEtiquetas"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/recycler_videos_etiqueta_idioma" />

        <TextView
            android:id="@+id/recycler_videos_etiqueta_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/youtube"
            android:paddingLeft="10dp"
            android:text="Trailer"
            android:textColor="@color/corTexto"
            android:textSize="@dimen/tamEtiquetas"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/recycler_videos_etiqueta_site" />


        <TextView
            android:id="@+id/recycler_videos_etiqueta_idioma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/youtube"
            android:paddingLeft="10dp"
            android:text="en"
            android:textColor="@color/corTexto"
            android:textSize="@dimen/tamEtiquetas"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/recycler_videos_etiqueta_tipo" />

        <TextView
            android:id="@+id/recycler_videos_etiqueta_nome"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/youtube"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Nome"
            android:textSize="@dimen/tamEtiquetas"
            android:textColor="@color/corTexto"
            app:layout_constraintStart_toEndOf="@+id/youtube"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/youtube"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/youtube" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>