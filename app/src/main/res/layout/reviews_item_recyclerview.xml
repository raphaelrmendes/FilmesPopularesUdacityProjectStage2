<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/fundoCard"
    app:cardCornerRadius="@dimen/raioArredCapaFilme"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recycler_reviews_etiqueta_autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/youtube"
            android:paddingLeft="10dp"
            android:text="Autor"
            android:textColor="@color/corTexto"
            android:textSize="@dimen/tamEtiquetas"
            app:layout_constraintStart_toEndOf="@+id/youtube"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recycler_reviews_etiqueta_conteudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/youtube"
            android:paddingRight="10dp"
            android:text="Conteudo"
            android:textColor="@color/corTexto"
            android:textSize="@dimen/tamEtiquetas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/youtube" />

        <ImageView
            android:id="@+id/youtube"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_rate_review_white_24dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>